<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/category_item_margin"
    android:background="@drawable/drw_category_item_background">

    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/category_item_title_margin_start"
        android:layout_marginTop="@dimen/category_item_title_margin_top"
        android:textColor="@color/text_reversed"
        android:textSize="16sp"
        tools:text="@tools:sample/cities[1]" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/separator_width"
        android:layout_height="@dimen/separator_height"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/category_title"

        android:background="@drawable/drw_separator" />

    <View
        android:id="@+id/checker"
        android:layout_width="@dimen/category_item_icon_size"
        android:layout_height="@dimen/category_item_icon_size"
        android:layout_margin="@dimen/category_item_icon_margin"
        android:layout_toEndOf="@id/view"
        android:background="@drawable/drw_selector" />

</RelativeLayout>