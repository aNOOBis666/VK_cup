<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_margin="4dp"
    android:foreground="@drawable/drw_category_item_foreground"
    android:background="@drawable/drw_category_item_background">

    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/text_reversed"
        android:textSize="16sp"
        tools:text="@tools:sample/cities[1]" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/category_title"

        android:background="@drawable/drw_separator" />

    <View
        android:id="@+id/checker"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/view"
        android:background="@drawable/drw_selector" />

</RelativeLayout>